[Unit]
Description=ESPHome Garage Door Controller
Documentation=https://github.com/joselsegura/garagedoor-esphome/blob/main/README.md
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=doorpi
Group=doorpi
WorkingDirectory=/home/doorpi/garagedoor_esphome
Environment=PATH=/home/doorpi/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/doorpi/venv/bin/esphome run garagedoor.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=esphome-garagedoor

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=false
ReadWritePaths=/home/doorpi/garagedoor_esphome
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

[Install]
WantedBy=multi-user.target
